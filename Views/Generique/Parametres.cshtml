
@{
    ViewBag.Title = "Parametres";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Parametres.css" rel="stylesheet" />
}

@model GenerateurDFUSafir.Models.ParametresModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edition des paramétres : </h4>
        <hr />
        <div class="form-group">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
            <div class="aParent">


                @foreach (var gen in Model.DataGeneriques)
                {   
                    <div>
                        <div>
                            <b>
                                @gen.Champ<br />
                                @gen.StringValue2
                            </b>
                        </div>
                        <div class="col-md-10">                            
                           <input  type="text" name="@gen.ID" id="@gen.ID" value="@gen.StringValue1"/>
                            @Html.ValidationMessageFor(model => gen.StringValue1, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


