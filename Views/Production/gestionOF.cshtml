                </div>

                @for (int i = 0; i < Model.OfEncours.Count; i++)
                {
                    if (Model.OfEncours[i].STATUSTYPE.ToUpper().Trim().Equals("INPROGRESS"))
                    {
                        <div class="OF-element" id="@Model.OfEncours[i].NMROF">
