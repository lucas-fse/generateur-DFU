    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/gestionOF.css?13" rel="stylesheet" />
    <link href="~/Content/of.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
}
<body>
    <p id="ouverturepopup" initvalue="@Model.Popup.ToString()" hidden></p>
    <div id="gestion-OF-container">
        <div id="topInfos">
            <div class="">
                <img src="~/image/logo.png" id="logo" alt="logo">
            </div>
        </div>
        <div id="categorie-OF">
