@model GenerateurDFUSafir.Models.GestionTraitementOFs
@{
    ViewBag.Title = "Accueil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Accueil/Accueil.css" rel="stylesheet" />
    int i = Model.DataOperateurs.Count % 5;
}

<body>

    <div class="main">
        <div id="present">
            <h1>
                CONDUCTIX WAMPFLER
            </h1>
            <h2>
                INTRANET
            </h2>
            <p>
                Le mot d’ordre est votre sécurité, ainsi que la mienne, et celle de tout le monde en meme temps ca serait cool.
            </p>
        </div>
        <div id="fabrizen">
            <div id="ListOperateur">
                @foreach (var item in @Model.DataOperateurs)
                {
                    string lien = !item.isValidPasswd
                        ? Url.Action("DefinirMDP", "Production", new { id = item.ID })
                        : Url.Action("ConnexionOp", "Production", new { id = item.ID });


                    <div class="Operateur">
                        <a href="@lien">
                            <img src="@item.Photo" />
                            <p>@item.Nom @item.Prenom</p>
                        </a>
                    </div>
                }

                @for (int y = 0; y < @i; y++)
                {
                    <div style="width : 300px;">

                    </div>
                }
            </div>
        </div>

    </div>

    <div class="conductix-logo">
        <img src="~/image/swirl.png" alt="Logo">
    </div>

</body>
