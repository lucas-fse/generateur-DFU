@model GenerateurDFUSafir.Models.GestionTraitementOFs
@{
    ViewBag.Title = "Accueil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Accueil/Accueil.css" rel="stylesheet" />
    int i = Model.DataOperateurs.Count % 5;
}

<body>
    <div class="main">
        <div class="present">
            <p>Bienvenue dans</p>
            <h1>Conductix Wampfler</h1>
            <p>Le mot d’ordre est votre sécurité, ainsi que la mienne, et celle de tout le monde en même temps, ça serait cool.</p>
        </div>


        <div id="fabrizen">
            <p style="padding: 15px; padding-bottom: 3px; font-size: 1.3rem; margin: 0px; color: #333; max-width: 600px; font-weight: 500; color: black; ">Sélectionnez votre personne : </p>
            <hr />
            <div id="ListOperateur">
                @foreach (var item in @Model.DataOperateurs)
                {
                    string lien = !item.isValidPasswd
                        ? Url.Action("EnvoyerTokensInitialisation", "Production", new { id = item.ID })
                        : Url.Action("ConnexionOp", "Production", new { id = item.ID });

                    <div class="Operateur">
                        <a href="@lien">
                            <img src="@Url.Content(item.Photo)" id="pdpopera"/>
                            <div id="ctn-id">
                                <p>@item.Nom</p>
                                <p>@item.Prenom</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
