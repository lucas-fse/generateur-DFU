        public static Int32 ConvertString2Value(String Value)
        {
            Int32 Result;

            try
            {
                if (Value.Contains("0x"))
                {
                    Value = Value.Replace("0x", " ").Trim();
                    Result = Convert.ToInt32(Value, 16);
                }
                else
                {
                    Result = Convert.ToInt32(Value);
                }
            }
            catch
            {
                Result = 0;
            }

            return Result;
        } // endMethod: ConvertString2Value

